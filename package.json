{
  "name": "gatsby-desktop",
  "description": "Gatsby Desktop",
  "version": "0.0.1-alpha.5",
  "main": "lib/main.js",
  "homepage": "https://www.gatsbyjs.com/",
  "author": "<matt@gatsbyjs.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.10.5",
    "@reach/router": "^1.3.4",
    "@types/theme-ui": "^0.3.6",
    "ansi-to-html": "^0.6.14",
    "chokidar": "^3.4.2",
    "core-js": "^3.6.5",
    "detect-port": "^1.3.0",
    "electron-log": "^4.2.4",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "execa": "^4.0.3",
    "express": "^4.17.1",
    "fix-path": "^3.0.0",
    "formik": "^2.1.5",
    "fs-extra": "^9.0.1",
    "gatsby": "^2.24.47",
    "gatsby-design-tokens": "^2.0.10",
    "gatsby-interface": "^0.0.193",
    "open-in-editor": "^2.2.0",
    "promisify-child-process": "^4.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "serve-static": "^1.14.1",
    "spawn-sync": "^2.0.0",
    "theme-ui": "^0.4.0-rc.1",
    "tmp": "^0.2.1",
    "typeface-inter": "^3.12.0",
    "typeface-roboto-mono": "^0.0.75",
    "xdg-basedir": "^4.0.0"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.0",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "electron-builder-notarize": "^1.2.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "microbundle": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "resolutions": {
    "theme-ui": "0.4.0-rc.1"
  },
  "scripts": {
    "build:renderer": "cross-env GATSBY_EXPERIMENTAL_ROUTING_APIS=1 gatsby build",
    "watch:renderer": "cross-env GATSBY_EXPERIMENTAL_ROUTING_APIS=1 gatsby develop --port=8079",
    "watch:main": "tsc -p app/tsconfig.json --watch",
    "build:main": "tsc -p app/tsconfig.json ",
    "run:app": "electron --remote-debugging-port=8315 .",
    "watch:app": "cross-env GATSBY_DEVELOP_URL=http://localhost:8079 yarn run:app",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l build:main --parallel watch:*",
    "build": "npm-run-all --parallel build:renderer build:main",
    "package": "electron-builder"
  },
  "build": {
    "productName": "Gatsby Desktop",
    "appId": "com.gatsbyjs.desktop",
    "copyright": "Copyright Â© 2020 Gatsby Inc.",
    "icon": "assets/icon.png",
    "afterSign": "electron-builder-notarize",
    "files": [
      "public/**/*",
      "lib/**/*",
      "assets/IconTemplate*"
    ],
    "mac": {
      "darkModeSupport": true,
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "category": "public.app-category.developer-tools",
      "gatekeeperAssess": false
    },
    "snap": {
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "background": "assets/background.png"
    }
  },
  "repository": "git@github.com:gatsbyjs/desktop.git"
}
